@{
}

<div class="active-gigs-container">
    <div class="row">
        @foreach (GigDetailViewModel GigDetail in Model)
        {
            <a class="col-lg-3 col-md-6" asp-controller="FreelanceList" asp-action="GigDetail" asp-route-GigId="@GigDetail.Gig.Id">
                <div class="active-gigs-card">
                    <img src="@GigDetail.Thumbnail.Uri" height="150" style="position:relative;width:100%" />
                    <div style="height:100px;padding-left:10px;padding-top:15px;">@GigDetail.Gig.Title</div>
                    <div style="height:50px;padding-left:10px;text-align:end;padding-top:15px;padding-right:8px;">
                        <span style="color:#FE2C54">Cost at</span>
                        <span style="color:#FE2C54;font-weight:bold;font-size:20px;">RM@(GigDetail.Gig.Price)</span>
                    </div>
                </div>
             </a>
        }
        <div class="col-3">
            <a asp-controller="CreateNewGig" asp-action="index" asp-route-id="@ViewBag.UserId">
                <div class="active-gigs-card" asp-controller="">
                    <div style="position:absolute; width:100%; height:50%; left: 0; right: 0; top: 0; bottom: 0; margin-left: auto; margin-right: auto; margin-top: auto; margin-bottom: auto;">
                        <img src="~/static/plus.png" style="position:absolute;left:0;right:0;margin-left:auto;margin-right:auto;" />
                        <div style="text-align:center;position:relative; margin-top:100px;">Create a new gig</div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>